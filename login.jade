doctype html
head
  title Login to Noted
  script.
    setCookie = function() {
      document.cookie = 'notedpass='+document.getElementById('password').value+'; max-age='+10 * 365 * 24 * 60 * 60+'; path=/';
      location.reload();
      }
body
  label Password
  input#password(type='password', onblur="setCookie()")
